<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.felix.medienbibliothek" >

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Grey"
        android:uiOptions="splitActionBarWhenNarrow">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonenActivity"

            android:label="@string/title_activity_personen">
        </activity>
        <activity
            android:name=".BuecherActivity"
            android:label="@string/title_activity_buecher">
        </activity>
        <activity
            android:name=".VerleihActivity"
            android:label="@string/title_activity_verleih">
        </activity>
        <activity
            android:name=".BuecherHinzufuegenActivity"
            android:label="@string/title_activity_buecher_hinzufuegen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".PersonenHinzufuegenActivity"
            android:label="@string/title_activity_personen_hinzufuegen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".PersonSuchenActivity"
            android:label="@string/title_activity_person_suchen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".BuecherSuchenActivity"
            android:label="@string/title_activity_buecher_suchen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".PersonUpdateActivity"
            android:label="@string/title_activity_person_update"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".BuecherUpdateActivity"
            android:label="@string/title_activity_buecher_update"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".VerleihHinzufuegenActivity"
            android:label="@string/title_activity_verleih_hinzufuegen"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
        <activity
            android:name=".PersonDetailsActivity"
            android:label="@string/title_activity_person_details"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.felix.medienbibliothek.MainActivity" />
        </activity>
    </application>

</manifest>
